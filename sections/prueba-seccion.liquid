{%if section.settings.title == blank %}
    <h1>No has puesto ningun titulo aun</h1>
{% elsif section.settings.title != blank %}
    <h1>{{section.settings.title}}</h1>
{% endif %}


<!-- Bloques -->
{%- for block in section.blocks -%}
{% case block.type %}
    {%- when 'heading' -%}
        <h2 class="image-with-text__heading h1">
            {{ block.settings.texto_bloque_id | escape }}
        </h2>
{%- endcase -%}
{%- endfor -%}


{% schema %}
{
	"name": "Titulo interno seccion",
	"tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Titulo"
        },
        {
            "type": "text",
            "id": "title2",
            "label": "Texto2",
            "default": "Texto por defecto"
        }
    ],
    "blocks": [
    {
        "type": "heading",
        "name": "Bloque texto",
        "limit": 1,
        "settings": [
            {
            "type": "text",
            "id": "texto_bloque_id",
            "label": "Titulo del texto del bloque heading"
            }
        ]
    }
    ],
    "presets": [
        {
            "name": "Titulo Agregar Seccion",
            "category": "Subcategoria Seccion",
            "blocks": [
            {
                "type": "heading"
            }
            ]
        }
    ]      
}
{% endschema %}